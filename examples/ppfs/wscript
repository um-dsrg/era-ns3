## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-
def build(bld):
    def set_properties(obj):
        obj.use = obj.ns3_module_dependencies
        obj.install_path = None

    all_modules = [mod[len("ns3-"):] for mod in bld.env['NS3_ENABLED_MODULES']]
    obj = bld.create_ns3_program('ppfs', all_modules)
    obj.source = ['ppfs.cc',
                  '../../common-code/flow.cc',
                  '../../common-code/transmitter-app.cc',
                  '../../common-code/topology-builder.cc',
                  '../../common-code/routing-helper.cc',
                  '../../common-code/custom-device.cc',
                  '../../common-code/terminal.cc',
                  '../../common-code/switch-base.cc',
                  '../../common-code/application-helper.cc',
                  '../../common-code/application-monitor.cc',
                  '../../common-code/animation-helper.cc',
                  '../../common-code/result-manager.cc',
                  '../../common-code/random-generator-manager.cc',
                  '../ospf-network/ospf-switch.cc',
                  'ppfs-switch.cc']
    obj.env.append_value('LIB', ['tinyxml2'])  # Adding the tinyxml2 library
    set_properties(obj)
